
@{
    ViewBag.Title = "Отчет о прикрепленных пациентах";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-title">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>id</th>
                                <th>ФИО</th>
                                <th>ИИН</th>
                                <th>Поликлиника</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var b in ViewBag.Clients)
                            {
                            <tr>
                                <th scope="row">@b.Id</th>
                                <td>@b.FName @b.LName @b.PName</td>
                                <td>@b.Iin</td>
                                <td>@b.MedOrgs.Name</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<form action="/MedOrg/Save" method="post">
    <div class="modal" tabindex="-1" role="dialog" id="dialog_edit">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Форма</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label">Название поликлиники</label>
                        <input type="text" class="form-control input-default " name="Name" placeholder="Введите имя поликлиники" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" class="form-control" name="Id" value="">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>
</form>
